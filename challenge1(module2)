pragma solidity ^0.8.7;

contract adminAccess{
    address public admin;

    event actionPerform(string message);

    function initial() public {
         require(admin == address(0),"Admin is Ready");
         admin = msg.sender;
    }

function checkAdmin() public view returns (bool) {
    return msg.sender == admin;
}

function requiredAccess() internal view {
    require(checkAdmin(),"only admin call function");

}
    function firstFunction() public {
        checkAdmin();
         emit actionPerform("first function is called");
    }

    function secondFunction() public {
        checkAdmin();
        emit actionPerform("second function is called");
    }
}
